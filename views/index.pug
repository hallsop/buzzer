doctype html
html
  head
    title=title
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:500,700|Roboto:400,500,700,900")
    link(rel="stylesheet" href='/style.css')
  body.js-body
    header
      img.logo(src='higfmmfy-logo.png')

    div.container
      form.view.js-join
        //img(src="/lets-play.png" class="main-image")
        h2="Let's play!"
        input(type='text' name='name' placeholder='Your name' required='required')
        select(name='team', required='required')
          each team in [{name:"Ian's Team", id:2}, {name: "Paul's Team", id:1}]
            option(value=team.id) #{team.name}
        button(type='submit')='Join'

      div.view.js-joined.hidden
        button.js-buzzer.buzzer()='Buzz!!!'
        p.js-joined-info=""

    script(src='/socket.io/socket.io.js')
    script(src='/join.js')
